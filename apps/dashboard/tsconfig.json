{
  "extends": "@handmade/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "strictNullChecks": true,
    "allowJs": true,
    "noEmit": true
  },
  "include": [".", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", "postcss.config.cjs"]
}
